{
  "compilerOptions": {
    "jsx": "react",
    "target": "es5",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": true,
    "lib": [
      "dom",
      "es7"
    ],
    "outDir": "./lib",
  },
  "include": [
    "src"
  ]
}